<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:gravity="center"
    android:orientation="horizontal"
    tools:ignore="UnusedAttribute">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRound"
        android:layout_width="@dimen/w_50"
        android:layout_height="@dimen/w_50"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_small"
        android:background="@drawable/circle_chap"
        android:gravity="center"
        android:textColor="?attr/themeBackgroundColor"
        android:textSize="@dimen/text_large"
        tools:text="A" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_chevron_right_black_48dp"
        android:drawablePadding="@dimen/padding_medium"
        android:gravity="center|start"
        android:text="@string/app_name"
        android:textColor="?attr/themeTextColor"
        android:textSize="@dimen/txt_medium" />

</LinearLayout>
