<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <size
                android:height="30dp"
                android:width="30dp" />

            <gradient
                android:angle="270"
                android:endColor="@color/white"
                android:startColor="@color/white" />

            <stroke
                android:width="0dp"
                android:color="@color/red" />
        </shape>
    </item>

</layer-list>